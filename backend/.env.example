# AI API Keys
OPENAI_API_KEY=your_openai_api_key_here  # Optional: For OpenAI-based features
ANTHROPIC_API_KEY=your_anthropic_api_key_here  # Required: For Claude Agent SDK (get from https://console.anthropic.com/)

# Web Search API Keys
TAVILY_API_KEY=your_tavily_api_key_here  # Optional: 1000 free searches/month (https://tavily.com)
# DuckDuckGo requires no API key and is used as fallback

# Optional: Additional search providers
# GOOGLE_SEARCH_API_KEY=your_key
# BING_SEARCH_API_KEY=your_key

# Optional: Responses web search tuning
# OPENAI_WEBSEARCH_MODEL=gpt-4.1-mini
# OPENAI_WEBSEARCH_MAX_TOKENS=2000
# OPENAI_WEBSEARCH_ALLOWED_DOMAINS=example.com,anotherdomain.com
# OPENAI_WEBSEARCH_CONTEXT_SIZE=medium

# Optional: MCP server configuration (JSON string or file path)
# OPENAI_MCP_SERVERS=[{"server_label":"sharepoint","connector_id":"connector_sharepoint"}]
# OPENAI_MCP_SERVERS_PATH=./config/mcp_servers.json
